<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE9D4"
    tools:context=".activity.RecordsActivity">

    <ImageButton
        android:id="@+id/recordsReturnImageButton"
        android:layout_width="66dp"
        android:layout_height="54dp"
        android:layout_marginStart="344dp"
        android:layout_marginTop="4dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/return_button"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/back"
        android:layout_width="410dp"
        android:layout_height="126dp"
        android:layout_marginTop="40dp"
        android:background="#00F6F6F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="186dp"
            android:layout_height="42dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/repense_icon" />

        <TextView
            android:id="@+id/totalRepenseTextView"
            android:layout_width="225dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="999999"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="186dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/income_icon" />

        <TextView
            android:id="@+id/totalIncomeTextView"
            android:layout_width="225dp"
            android:layout_height="42dp"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:text="999999"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/totalCountTextView"
            android:layout_width="225dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="999999"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="186dp"
            android:layout_height="42dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/total_icon" />

    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="416dp"
        android:layout_height="544dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back"
        app:srcCompat="@drawable/matter_records_background" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="114dp"
        android:layout_height="33dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:srcCompat="@drawable/income_expense_text" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="55dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:srcCompat="@drawable/matter" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="73dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:srcCompat="@drawable/cost_text" />

    <ListView
        android:id="@+id/recordsListView"
        android:layout_width="276dp"
        android:layout_height="446dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView9" />

</androidx.constraintlayout.widget.ConstraintLayout>